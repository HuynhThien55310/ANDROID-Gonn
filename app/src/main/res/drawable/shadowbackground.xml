<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:gradientRadius="450sp"
                        android:endColor="#eeeeee"
                        android:startColor="#69444B"
                        android:type="radial" />
                    <corners android:radius="3sp" />
                </shape>
            </item>
            <item
                android:left="0sp"
                android:right="0sp"
                android:top="0sp"
                android:bottom="2sp">
                <shape android:shape="rectangle">
                    <solid android:color="#FFFFFF"/>
                    <corners android:radius="3sp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>